{
  "name": "regal",
  "version": "0.2.1",
  "description": "The adaptable game framework for everyone.",
  "author": "Joe Cowman <joe.r.cowman@gmail.com> (http://joecowman.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/regal/regal"
  },
  "homepage": "https://github.com/regal/regal",
  "bugs": {
    "url": "https://github.com/regal/regal/issues"
  },
  "keywords": [
    "game",
    "game framework",
    "game development",
    "gamedev",
    "typescript"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "test": "nyc mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "check-coverage": "nyc check-coverage --lines 75 --functions 75 --branches 75"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "typescript": "^2.9.2",
    "util": "^0.11.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "readline": "^1.3.0",
    "source-map-support": "^0.5.6",
    "ts-node": "^6.1.2"
  }
}
